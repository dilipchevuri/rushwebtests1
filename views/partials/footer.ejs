  // Fixing the footer logo w.r.t the theme/mode

document.addEventListener("DOMContentLoaded", function () {
    var logo = document.getElementById("logoimg");

    // Check if the theme preference is stored in localStorage.
    var themePreference = localStorage.getItem("theme");

    console.log("Theme Preference:", themePreference);

    // Set the initial theme based on the stored preference or default to light.
    if (themePreference === "dark") {
        document.body.classList.add("dark-theme");
        logo.src = "images/home/RuSh_Elysian_Main_white.png";
    } else {
        document.body.classList.remove("dark-theme");
        logo.src = "images/home/RuSh_Elysian_Main_Blue_cropped.png";
    }

    logo.onclick = function () {
        document.body.classList.toggle("dark-theme");
        if (document.body.classList.contains("dark-theme")) {
            logo.src = "images/home/RuSh_Elysian_Main_white.png";
            localStorage.setItem("theme", "dark");
        } else {
            logo.src = "images/home/RuSh_Elysian_Main_Blue_cropped.png";
            localStorage.setItem("theme", "light");
        }

        console.log("Theme Toggled:", document.body.classList.contains("dark-theme"));
    };
});
